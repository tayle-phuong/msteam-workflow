<p class="text-green-600 mb-4"><%= notice %></p>

<%= render @workflow %>

<div class="mt-6 space-x-4">
  <%= link_to "Edit this workflow", edit_workflow_path(@workflow), class: "text-blue-500 hover:text-blue-700 underline" %> |
  <%= link_to "Back to workflows", workflows_path, class: "text-blue-500 hover:text-blue-700 underline" %>

  <%= button_to "Destroy this workflow", @workflow, method: :delete, class: "px-4 py-2 bg-red-500 text-white rounded hover:bg-red-700" %>
</div>
