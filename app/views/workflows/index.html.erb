<h1 class="text-3xl font-bold mb-6">Workflows</h1>

<div id="workflows" class="grid grid-cols-1 gap-4">
  <% @workflows.each do |workflow| %>
    <div class="p-4 bg-white shadow rounded-lg">
      <%= render workflow %>
      <p class="mt-2">
        <%= link_to "Show this workflow", workflow, class: "text-blue-500 hover:text-blue-700 underline" %>
      </p>
    </div>
  <% end %>
</div>

<div class="mt-6">
  <%= link_to "New workflow", new_workflow_path, class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-700" %>
</div>
