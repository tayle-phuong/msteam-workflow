<div class="mt-4 p-4 bg-white shadow-md rounded-lg">
  <p><strong>Email:</strong> <%= current_user.email %></p>
  <p><strong>UID:</strong> <%= current_user.uid %></p>
  <p><strong>Provider:</strong> <%= current_user.provider %></p>
  <p><strong>Created at:</strong> <%= current_user.created_at.strftime("%B %d, %Y %H:%M") %></p>
  <p><strong>Last updated:</strong> <%= current_user.updated_at.strftime("%B %d, %Y %H:%M") %></p>

  <div class="mt-4">
    <h2 class="text-2xl font-bold mb-2">Raw Info</h2>
    <pre class="bg-gray-100 p-4 rounded-lg text-sm text-gray-800">
      <%= JSON.pretty_generate(current_user.raw_info) %>
    </pre>
  </div>

  <div class="mt-4">
    <h2 class="text-2xl font-bold mb-2">Token</h2>
    <p class="bg-gray-100 p-4 rounded-lg text-sm text-gray-800 break-words">
      <%= current_user.token %>
    </p>
  </div>
</div>
