<h1 class="text-2xl font-bold mb-4">Submits</h1>

<div id="submits" class="space-y-4">
  <% @submits.each do |submit| %>
    <div class="p-4 border border-gray-300 rounded-lg shadow-md">
      <%= render submit %>
      <p class="mt-2">
        <%= link_to "Show this submit", submit, class: "text-blue-500 hover:underline" %>
      </p>
    </div>
  <% end %>
</div>
